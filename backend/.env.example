# Video Analytics Environment Configuration
# Copy this file to .env and adjust values as needed

# Host Configuration
VIDEO_ANALYTICS_HOST_IP=127.0.0.1      # Host IP for external access
VIDEO_ANALYTICS_API_HOST=0.0.0.0       # API server bind address (0.0.0.0 for all interfaces)
VIDEO_ANALYTICS_API_PORT=8000          # API server port
VIDEO_ANALYTICS_API_DEBUG=false        # Enable API debug mode

# WebSocket Configuration
VIDEO_ANALYTICS_WS_HOST=localhost      # WebSocket server host
VIDEO_ANALYTICS_WS_PORT=8001          # WebSocket server port
VIDEO_ANALYTICS_WS_DEBUG=false        # Enable WebSocket debug mode
VIDEO_ANALYTICS_WS_SSL=false          # Enable SSL for WebSocket
VIDEO_ANALYTICS_WS_KEY=               # Path to SSL key file
VIDEO_ANALYTICS_WS_CERT=              # Path to SSL certificate file

# Storage Configuration
VIDEO_ANALYTICS_STORAGE_PATH=tmp_content  # Base path for temporary content storage
VIDEO_ANALYTICS_MAX_UPLOAD_SIZE=500      # Maximum upload size in MB
VIDEO_ANALYTICS_CLEANUP_INTERVAL=24      # Cleanup interval in hours

# Logging Configuration
VIDEO_ANALYTICS_LOG_LEVEL=INFO        # Logging level (DEBUG, INFO, WARNING, ERROR)
VIDEO_ANALYTICS_LOG_FILE=logs/video_analytics.log  # Log file path
VIDEO_ANALYTICS_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# OpenAI Configuration
OPENAI_API_KEY=your-api-key-here      # Your OpenAI API key
OPENAI_API_BASE=https://api.openai.com/v1  # OpenAI API base URL
OPENAI_MODEL=gpt-4o-mini             # OpenAI model to use

# Viewer Configuration
VIDEO_ANALYTICS_VIEWER=custom         # Viewer type (custom or rerun)
VIDEO_ANALYTICS_FRAME_BUFFER=30       # Maximum frames to buffer
VIDEO_ANALYTICS_TARGET_FPS=30         # Target frames per second
