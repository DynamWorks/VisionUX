# Video Analytics Environment Configuration                                       
 # Copy this file to .env and adjust values as needed                              
                                                                                   
 # Host Configuration                                                              
 VIDEO_ANALYTICS_HOST_IP=127.0.0.1      # Host IP for external access              
 VIDEO_ANALYTICS_API_HOST=0.0.0.0       # API server bind address (0.0.0.0 for all interfaces)                                                                       
 VIDEO_ANALYTICS_API_PORT=8000          # API server port                          
 VIDEO_ANALYTICS_API_DEBUG=false        # Enable API debug mode                    
                                                                                   
 # WebSocket Configuration                                                         
 VIDEO_ANALYTICS_WS_HOST=localhost      # WebSocket server host                    
 VIDEO_ANALYTICS_WS_PORT=8001          # WebSocket server port                     
 VIDEO_ANALYTICS_WS_DEBUG=false        # Enable WebSocket debug mode               
                                                                                   
 # Rerun Configuration                                                             
 VIDEO_ANALYTICS_RERUN_WEB_PORT=9090   # Rerun web viewer port                     
 VIDEO_ANALYTICS_RERUN_WS_PORT=4321    # Rerun WebSocket port                      
 VIDEO_ANALYTICS_RERUN_WEB_HOST=localhost  # Rerun web viewer host                 
 VIDEO_ANALYTICS_RERUN_WS_HOST=localhost   # Rerun WebSocket host 
 VIDEO_ANALYTICS_RERUN_WEB_URL=http://localhost:9090  # Full URL for Rerun web     viewer                                                                            
 VIDEO_ANALYTICS_RERUN_WS_URL=ws://localhost:4321     # Full URL for Rerun WebSock 
                           
# OpenAI Configuration
OPENAI_API_KEY=your-api-key-here      # Your OpenAI API key
OPENAI_API_BASE=https://api.openai.com/v1  # OpenAI API base URL                  
                                                                                   
 # Storage Configuration                                                           
 VIDEO_ANALYTICS_STORAGE_PATH=tmp_content  # Base path for temporary content stora 
 VIDEO_ANALYTICS_MAX_UPLOAD_SIZE=500       # Maximum upload size in MB             
                                                                                   
 # Logging Configuration                                                           
 VIDEO_ANALYTICS_LOG_LEVEL=INFO           # Logging level (DEBUG, INFO, WARNING,ERROR)                                                                            
 VIDEO_ANALYTICS_LOG_FILE=video_analytics.log  # Log file name  
 VIDEO_ANALYTICS_VIEWER=custom

